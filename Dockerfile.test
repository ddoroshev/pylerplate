FROM ghcr.io/pomidoroshev/pylerplate:base-compile-3.9.7 as compile

COPY poetry.lock pyproject.toml /app/

RUN poetry install --no-root

COPY . /app/

FROM ghcr.io/pomidoroshev/pylerplate:base-runtime-3.9.7 as runtime

COPY --from=compile /venv /venv
COPY --from=compile /app /app

CMD ["make", "test"]
